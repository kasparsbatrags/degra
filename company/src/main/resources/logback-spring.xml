<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProfile name="dev,test,integrationTest">
        <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>
                    %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%logger{1}): %msg%n%throwable
                </Pattern>
            </layout>
        </appender>

        <root level="debug">
            <appender-ref ref="Console"/>
        </root>

        <logger name="lv.degra.accounting.company" level="debug"/>
        <logger name="org.hibernate.SQL" level="debug"/>
        <logger name="org.hibernate.type.descriptor.sql" level="trace"/>
    </springProfile>

    <springProfile name="!dev">
        <property name="LOGS" value="./../logs"/>

        <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOGS}/logFile.log</file>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <Pattern>%d %p %logger{1} [%t] %m%n</Pattern>
            </encoder>

            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOGS}/archived/logFile.%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            </rollingPolicy>
        </appender>

        <root level="info">
            <appender-ref ref="RollingFile"/>
        </root>

        <logger name="lv.degra.accounting.company" level="info"/>
    </springProfile>

</configuration>
